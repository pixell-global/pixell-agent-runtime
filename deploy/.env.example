# PAR Deployment Environment Variables
# Copy this file to .env and fill in the values

# ============================================================================
# AWS Configuration (Required for push/update)
# ============================================================================
AWS_REGION=us-east-2
AWS_ACCOUNT_ID=636212886452
ECR_REPO=pixell-agent-runtime

# ============================================================================
# ECS Configuration (Required for service update)
# ============================================================================
ECS_CLUSTER=pixell-runtime-cluster
ECS_SERVICE=pixell-runtime

# ============================================================================
# Agent Configuration (Required)
# ============================================================================
# Unique identifier for this agent (e.g., python-executor, data-analyzer)
AGENT_APP_ID=my-agent-id

# S3 or HTTPS URL to the agent package (.apkg file)
# Examples:
#   s3://pixell-agent-packages/my-agent/v1.0.0/package.apkg
#   https://example.com/packages/my-agent.apkg
PACKAGE_URL=s3://pixell-agent-packages/AGENT_APP_ID/package.apkg

# ============================================================================
# Security & Validation (Optional but Recommended)
# ============================================================================
# SHA256 checksum of the package for integrity validation
# Generate with: sha256sum package.apkg
PACKAGE_SHA256=

# Deployment identifier for tracking and correlation
# Auto-generated if not provided
DEPLOYMENT_ID=

# ============================================================================
# Runtime Configuration (Optional - defaults provided)
# ============================================================================
# S3 bucket for package storage (default: pixell-agent-packages)
S3_BUCKET=pixell-agent-packages

# Base path for agent routes (default: /agents/${AGENT_APP_ID})
# Examples: /agents/my-agent, /
BASE_PATH=/agents/${AGENT_APP_ID}

# Port configuration
REST_PORT=8080
A2A_PORT=50051
UI_PORT=3000

# Whether to serve UI on REST port (default: true)
MULTIPLEXED=true

# ============================================================================
# Performance & Reliability (Optional - defaults provided)
# ============================================================================
# Maximum package size in MB (default: 100)
MAX_PACKAGE_SIZE_MB=100

# Boot time soft budget in milliseconds (warning if exceeded, default: 5000)
BOOT_BUDGET_MS=5000

# Boot time hard limit multiplier (exit if boot_time > budget * multiplier)
# Set to 0 to disable hard limit (default: 2.0)
BOOT_HARD_LIMIT_MULTIPLIER=2.0

# Graceful shutdown timeout in seconds (default: 30)
GRACEFUL_SHUTDOWN_TIMEOUT_SEC=30

# ============================================================================
# Image Configuration (Optional)
# ============================================================================
# Docker image tag (default: git_sha-timestamp)
# IMAGE_TAG=latest
